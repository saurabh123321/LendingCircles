<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <link rel="apple-touch-icon" sizes="76x76" href="/dashboard/assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="/dashboard/assets/img/favicon.png">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>
   My Dashboard
  </title>
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
 
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
  
  <link href="/dashboard/assets/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/dashboard/assets/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />
 
  <link href="/dashboard/assets/demo/demo.css" rel="stylesheet" />
  <style>
  
  .navbar{
    background: #39424E;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #39424E, #39424E);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #39424E, #39424E);
  }
 
  .sidebar-wrapper{
    background: #39424E;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #39424E, #39424E);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #39424E, #39424E);
  }
  .simple-text {
   /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
   background: #39424E;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #39424E, #39424E);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #39424E, #39424E);

  }
  
  .logo{
    
    background: #39424E;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #39424E, #39424E);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #39424E, #39424E);

  }


  .card-title{
    color: #000000;
  }
  
 
  </style>
</head>

<body class="">
  <div class="wrapper ">
    <div class="sidebar"  data-active-color="danger">
     
      <div class="logo">
        <a href="#" class="simple-text logo-mini">
          <div class="logo-image-small">
              <% if(user.profilePic){%> 
                <img src="data:image/jpeg;base64,<%=user.profilePic%>">
               <%}else{%> 
               <img src="/dashboard/assets/img/logo-small.png"> <%} %>
  
          </div>
        </a>
        <a href="http://www.creative-tim.com" class="simple-text logo-normal">
          <%= user.name %>
       
        </a>
      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li class="active ">
            <a href="/user/dashboard">
              <i class="nc-icon nc-bank"></i>
              <p>Dashboard</p>
            </a>
          </li>
        
          
          <li>
            <a href="/user/profile/<%=user._id%>">
              <i class="nc-icon nc-single-02"></i>
              <p>User Profile</p>
            </a>
          </li>
      
        </ul>
      </div>
    </div>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <div class="navbar-toggle">
              <button type="button" class="navbar-toggler">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
              </button>
            </div>
            <a class="navbar-brand" href="#pablo">My Dashboard</a>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navigation">
          
            <ul class="navbar-nav">
           
        
              <li class="nav-item btn-rotate dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="nc-icon nc-settings-gear-65"></i>
                  <p>
                    <span class="d-lg-none d-md-block">Settings</span>
                  </p>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                  
                  <a class="dropdown-item" href="/user/profile/<%=user._id%>">Signed in as <%= user.username%></a>
                  <%if(user.kyc === undefined ){%>
                  <a class="dropdown-item" href="/user/kyc">Upload KYC</a> <%}%>
                  <a class="dropdown-item" href="/user/logout">Logout</a>
                </div>
              </li>
             
            </ul>
          </div>
        </div>
      </nav>
   
      <div class="content">
        <div class="row">
       
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
              <div class="card-body ">
                <div class="row">
                  <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                      <i class="nc-icon nc-money-coins text-success"></i>
                    </div>
                  </div>
                  <div class="col-7 col-md-8">
                    <div class="numbers">
                      <p class="card-category">My Wallet</p>
                      <p class="card-title">Rs. <%= Math.round(user.wallet,2) %>
                        <p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer ">
                <hr>
                <div class="stats">
                 <a href="/payment/charge"> <i class="nc-icon nc-simple-add"></i> Recharge Wallet</a>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
              <div class="card-body ">
                <div class="row">
                  <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                      <i class="nc-icon nc-vector text-primary"></i>
                    </div>
                  </div>
                  <div class="col-7 col-md-8">
                    <div class="numbers">
                      <p class="card-category">No. of loans taken</p>
                      <p class="card-title"><%=user.loansTaken.length%>
                        <p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer ">
                <hr>
                <div class="stats">
                  <i class="fa fa-clock-o"></i> In the past
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
              <div class="card-body ">
                <div class="row">
                  <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                      <i class="nc-icon nc-watch-time text-danger"></i>
                    </div>
                  </div>
                  <div class="col-7 col-md-8">
                    <div class="numbers">
                      <p class="card-category">No. of loans given </p>
                      <p class="card-title"><%=user.contributedLoans.length%>
                        <p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer ">
                <hr>
                <div class="stats">
                  <i class="fa fa-refresh"></i> Yet to be paid
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="card card-stats">
              <div class="card-body ">
                <div class="row">
                  <div class="col-5 col-md-4">
                    <div class="icon-big text-center icon-warning">
                      <i class="nc-icon nc-cloud-download-93 text-warning"></i>
                    </div>
                  </div>
                  <div class="col-7 col-md-8">
                    <div class="numbers">
                      <p class="card-category">Withdraw from wallet</p>
                      <p class="card-title"><form action="/user/flush/<%=user._id%>" method="POST"><input placeholder="amt" type="number" name="trans" style="width:100%;">
                        <p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card-footer ">
                <hr>
                <div class="stats">
                  <input class="form-control" type="submit" value="Withdraw"></form>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">

            <div class="col-md-12">
              <div class="card ">
                <div class="card-header text-center">
                  <h5 class="card-title text-center">Apply for a new Loan</h5>
                </div>
                <div class="card-body ">
                <% if(user.kycstatus === 'approved'){%>
                <a class="btn btn-large btn-success btn-block" href="/loan/new" >Apply here!</a>
                <% }else{ %>
                  <a class="btn btn-large disabled btn-success btn-block" href="#" >Apply here!</a>
                  <p class="text-danger">You can't apply for a loan until your KYC is approved</p>
                  <% } %>
                  </ul>
                </div>
                
              </div>
            </div>
          </div>

          <div class="row">

              <div class="col-md-12">
                <div class="card ">
                  <div class="card-header text-center">
                    <h5 class="card-title  text-center">Loan feeds!</h5>
                  </div>
                  <div class="card-body ">
                  <a class="btn btn-large btn-warning btn-block" href="/loan/showall" >Review and lend loans!</a>
                    </ul>
                  </div>
                  
                </div>
              </div>
            </div>
  

      <% if(pendingLoans.length !== 0) { %>

        <div class="row">

          <div class="col-md-12">
            <div class="card ">
              <div class="card-header ">
                <h5 class="card-title text-danger">Pending Loans</h5>
              </div>
              <div class="card-body ">
              
                
                  <% pendingLoans.forEach(ploan => { %>
                    <p>
                        Loan ID <a href="/loan/<%=ploan._id%>"> <%= ploan._id %></a> - Amount - Rs. <%= ploan.amtReq  %>
                        <p>
                  <% }) %>

               
              </div>
              
            </div>
          </div>
        </div>

        <% } %>


<% if(acceptedLoans.length !== 0){ %>

        <div class="row">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-header ">
                <h5 class="card-title text-success">Accepted Loans</h5>
              </div>
              <div class="card-body ">
                    <% acceptedLoans.forEach(aloan => { %>
                      <p>
                          Loan ID <a href="/loan/<%=aloan._id%>"> <%= aloan._id %></a> - Amount - Rs. <%= aloan.amtReq  %>
                          <p>
                    <% }) %>
              </div>
              </div>       
            </div>
          </div>
      
    <% } %>

    <% if(collabLoans.length != 0){ %>

        <div class="row">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-header ">
                <h5 class="card-title text-info">Contributed Loans</h5>
              </div>
              <div class="card-body ">
              
               
                    <% collabLoans.forEach(cloan => { %>
                     <p>
                     Loan ID <a href="/loan/<%=cloan._id%>"> <%= cloan._id %></a> - Amount - Rs. <%= cloan.amtReq  %> 
                     
                     <p>
                    <% }) %>
               
              </div>

            </div>
          </div>
        </div>
       
        <% } %>

      </div>
      <footer class="footer footer-black  footer-white ">
        <div class="container-fluid">
          <div class="row">
            <nav class="footer-nav">
              <ul>
                <li>
            //      <a href="#" target="_blank">the Old Monks</a>
                </li>
                
              </ul>
            </nav>
            <div class="credits ml-auto">
           
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>
  <!--   Core JS Files   -->
  <script src="/dashboard/assets/js/core/jquery.min.js"></script>
  <script src="/dashboard/assets/js/core/popper.min.js"></script>
  <script src="/dashboard/assets/js/core/bootstrap.min.js"></script>
  <script src="/dashboard/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>


  <!--  Notifications Plugin    -->
  <script src="/dashboard/assets/js/plugins/bootstrap-notify.js"></script>
  <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="/dashboard/assets/js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>

  <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
  <script src="/dashboard/assets/demo/demo.js"></script>
  <script>
    $(document).ready(function() {
      // Javascript method's body can be found in assets/assets-for-demo/js/demo.js
      demo.initChartsPages();
    });
  </script>
</body>

</html>